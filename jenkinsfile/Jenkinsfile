pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Deploy to Dev') {
            when {
                expression { env.GIT_BRANCH?.endsWith('/dev') }
            }
            steps {
                sh '''
                cd ../ansible
                ansible-playbook -i hosts deploy.yml
                '''
            }
        }

        stage('Deploy to Prod') {
            when {
                expression { env.GIT_BRANCH?.endsWith('/main') }
            }
            steps {
                sh '''
                cd ../ansible
                ansible-playbook -i hosts deploy.yml
                '''
            }
        }
    }

    post {
        success {
            echo "Deployment successful"
        }
    }
}

