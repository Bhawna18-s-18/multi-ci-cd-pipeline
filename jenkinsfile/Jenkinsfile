pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

	stage('Deploy to Dev') {
   	 when {
       		 branch 'dev'
    }
    	steps {
        	sh '''
       		 cd ansible
       			 ansible-playbook -i inventory deploy.yml --limit dev
        		'''
    }
}

	stage('Deploy to Prod') {
   	 when {
       		 branch 'main'
   	 }

    steps {
        sh '''
        cd ansible
        ansible-playbook -i inventory deploy.yml --limit prod
        '''
    }
}

    post {
        success {
            echo "Deployment successful"
        }
        failure {
            echo "Deployment failed"
        }
    }
}

